---
import { getClassesFromAttrs, ManageStyles} from '../utils/utils';
export interface MetaProps{
	/** Disable Typetura */
	none?: boolean;
	/** Pass through a custom Keyframe ID */
	key?:string
		/** Adjust the Scale for this Headline */
	scale?:number
		/** Adjust the Base Size for this Headline */
	base?:number
	/** Adjust the Font Timing for this Headline */
	ease?: CSSStyleDeclaration['animationTimingFunction']

}


const {scale,key, base, ease, none,...attrs} = Astro.props as MetaProps

const Meta = 'p'

const {classlist } = getClassesFromAttrs(attrs)
---
{
	(Boolean(base) || Boolean(scale) || Boolean(ease) || Boolean(none) || Boolean(key) ) &&
	<Fragment set:html={ManageStyles('meta',key,none,base,scale,ease)}/> 
}
<Meta
	class:list={[
		'meta',
		classlist
	]}
	{...attrs}
>
	<slot/>
</Meta>
