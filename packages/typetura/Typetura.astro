---
import * as typetura from 'typeturajs';

interface Props {
	cdn?:boolean
	base?:number
	scale?:number
	js?:boolean
}

const {cdn, base = 20, scale = 1, js} = Astro.props as Props

---
<!-- Typetura Typography -->


	<script src='https://cdn.jsdelivr.net/gh/scottkellum/typetura.js@master/js/typetura.min.js'></script>


{
	Boolean(js) 
	?
		<script is:inline define:vars={{base,scale}}>
			window.typetura = {
				base: base, 
				scale: scale
			};
		</script>
	:
		<style is:global define:vars={{base,scale}}>
			:root {
				--tt-base: var(--base);
				--tt-scale: var(--scale);
			}
		</style>
}
<!-- END: Typetura Typography -->
