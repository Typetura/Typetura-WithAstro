---
import { getClassesFromAttrs, ManageStyles, HeadingLevels, ScopedStyleName} from '../utils/utils';
import type { HeadlineProps } from '../types';
// export interface HeadlineProps {
// 	/** Set the Level of Heading Between H1-H3*/
// 	level?: string | number;
// 	/** Apply as SubHeadline  */
// 	sub?: boolean;
// 	/** Disable Typetura */
// 	none?: boolean;
// 	/** Apply a new Animatiton Key */
// 	key?:string
// 	/** Adjust the Scale for this Headline */
// 	scale?: number;
// 	/** Adjust the Base Size for this Headline */
// 	base?: number;
// 	/** Adjust the Font Timing for this Headline */
// 	ease?: CSSStyleDeclaration['animationTimingFunction'];
	
// }

let { level=1, scale, base, ease, none, key, ...attrs } = Astro.props as HeadlineProps;

const Headline: string = HeadingLevels(level,[1,3],'Headline')

const {classlist} = getClassesFromAttrs(attrs)

const {scopedClass} = ScopedStyleName('primary-headline')

---
{
	(Boolean(base) || Boolean(scale) || Boolean(ease) || Boolean(none) || Boolean(key)) &&
	<style set:html={ManageStyles(scopedClass,key,none,base,scale,ease)}/> 
}
<Headline
	class:list={[
		scopedClass,
		classlist,
	]}
	{...attrs}
>
	<slot />
</Headline>

